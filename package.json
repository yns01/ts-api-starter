    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.19.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2"
  },
  "lint-staged": {
    "*.+(ts)": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0",
